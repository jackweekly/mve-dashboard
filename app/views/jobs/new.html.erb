<h1 class="text-2xl font-bold mb-6">New Optimization Job</h1>

<% if @job.errors.any? %>
  <div class="mb-6 rounded bg-red-50 p-4 text-red-700">
    <p class="font-semibold"><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</p>
    <ul class="mt-2 list-disc pl-5">
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @job, url: jobs_path, class: "space-y-6") do |form| %>
  <div>
    <%= form.label :problem_type, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :problem_type, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :solver, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :solver, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :seed, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :seed, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :params_json, "Parameters (JSON)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :params_json,
                      value: @params_json,
                      rows: 8,
                      class: "mt-1 block w-full rounded-md border-gray-300 font-mono text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <p class="mt-2 text-sm text-gray-500">Provide any solver-specific configuration as JSON.</p>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Queue Job", class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
<% end %>
