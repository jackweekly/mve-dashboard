<h1 class="text-2xl font-bold mb-4">Jobs</h1>

<table class="table-auto w-full">
  <thead>
    <tr>
      <th class="px-4 py-2">Problem Type</th>
      <th class="px-4 py-2">Solver</th>
      <th class="px-4 py-2">Seed</th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2"></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td class="border px-4 py-2"><%= job.problem_type %></td>
        <td class="border px-4 py-2"><%= job.solver %></td>
        <td class="border px-4 py-2"><%= job.seed %></td>
        <td class="border px-4 py-2"><%= job.status %></td>
        <td class="border px-4 py-2"><%= link_to "Show", job_path(job) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Job", new_job_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>