<div class="flex items-center justify-between">
  <h1 class="text-2xl font-bold">Jobs</h1>
  <%= link_to "New Job", new_job_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
</div>

<%= turbo_stream_from :jobs %>

<div class="mt-6 overflow-hidden rounded-lg bg-white shadow">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Problem</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Solver</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Progress</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
        <th scope="col" class="px-6 py-3" aria-label="Actions"></th>
      </tr>
    </thead>
    <tbody id="jobs-table" class="divide-y divide-gray-200 bg-white">
      <% if @jobs.any? %>
        <%= render partial: "job_row", collection: @jobs, as: :job %>
      <% else %>
        <tr>
          <td colspan="5" class="px-6 py-10 text-center text-sm text-gray-500">No jobs yet. Queue your first run to see it here.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
