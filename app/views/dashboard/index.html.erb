<div class="flex items-center justify-between">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="mt-1 text-sm text-gray-500">Monitor optimization jobs and launch new experiments.</p>
  </div>
  <%= link_to "New Job", new_job_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
</div>

<%= turbo_stream_from :jobs %>

<div class="mt-8 grid gap-6 md:grid-cols-4">
  <% @counts.each do |status, count| %>
    <div class="rounded-lg bg-white p-6 shadow">
      <p class="text-sm font-medium text-gray-500"><%= status.to_s.titleize %></p>
      <p class="mt-2 text-2xl font-semibold text-gray-900"><%= count %></p>
    </div>
  <% end %>
</div>

<div class="mt-8 rounded-lg bg-white shadow">
  <div class="flex items-center justify-between border-b border-gray-200 px-6 py-4">
    <h2 class="text-lg font-semibold text-gray-900">Recent Jobs</h2>
    <%= link_to "View all", jobs_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Problem</th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Solver</th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Progress</th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
          <th class="px-6 py-3" aria-label="Actions"></th>
        </tr>
      </thead>
      <tbody id="dashboard-jobs" class="divide-y divide-gray-200 bg-white">
        <% if @jobs.any? %>
          <%= render partial: "jobs/job_row", collection: @jobs, as: :job %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-10 text-center text-sm text-gray-500">No jobs yet â€“ queue one to get started.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
